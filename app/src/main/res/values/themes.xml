<resources>
    <!-- Base application theme. -->
    <style name="Theme.Picture_here_app" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_here</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_here</item>
        <item name="colorSecondaryVariant">@color/blue_here</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Color bar -->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/mukta_malar_regular</item>

        <item name="bottomNavigationStyle">@style/bottomNavigationCustom</item>
    </style>

    <style name="TextH1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextH2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBold" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Page" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/background</item>
    </style>

    <style name="bottomNavigationCustom" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/background</item>
    </style>
</resources>